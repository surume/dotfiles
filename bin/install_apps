    editorconfig
    eksctl
    exa
    fd
    fish
    fzf
    ghq
    gibo
    git
    google-cloud-sdk
    grpcurl
    httpie
    hub
    jq
    kubectx
    kubernetes-helm
    kustomize
    hidetatz/tap/kubecolor
    krew
    lazygit
    m-cli
    mas
    mysql-client
    neovim
    newt
    openssl
    pgcli
    pinentry-mac
    reattach-to-user-namespace
    ripgrep
    # spectacle
    sshrc
    starship
    the_silver_searcher
    tig
    tmux
    tokei
    tree
    wget
    wrk

    # Cask
    alacritty
